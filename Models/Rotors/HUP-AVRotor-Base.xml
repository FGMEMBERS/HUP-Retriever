	<path>Models/hup-avrotor-pale-base.ac</path>

	<texture-path>Models/Textures</texture-path>
        <offsets>
            <heading-deg>180</heading-deg>
        </offsets>

       <animation>
                <condition>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>999</value>
                    </equals>
            </condition>
		<type>select</type>
                <object-name>Gabarit-Pose</object-name>
 	</animation>

        <!--ALPHA HIERARCHY=================-->
        <animation>
                <name>Alpha</name>
                <object-name>Rotor-Pale</object-name>
                <object-name>Rotor-PaleD</object-name>
                <object-name>Rotor-Pale-Base</object-name>
                <object-name>Rotor-Pale-Fix</object-name>
                <object-name>Rotor-Pale-Rot</object-name>
                <object-name>Rotor-Disc_M-Pale</object-name>
        </animation>

        <!--BLEND===================-->

        <animation>
		<type>blend</type>
		<object-name>Rotor-Pale</object-name>
                <property>rotors/main/rpm</property>
		<factor>0.0035</factor>
	</animation>

         <animation>
		<type>blend</type>
                <object-name>Rotor-PaleD</object-name>
		<property>rotors/main/rpm</property>
		<factor>0.0027</factor>
	</animation>

        <animation>
		<type>blend</type>
                <object-name>Rotor-Pale-Base</object-name>
                <object-name>Rotor-Pale-Fix</object-name>
		<property>rotors/main/rpm</property>
		<factor>0.0025</factor>
	</animation>

       <!-- <animation>
		<type>blend</type>
		<object-name>Rotor-Disc_M-Pale</object-name>
		<property>rotors/main/rpm</property>
                <offset>-0.20</offset>
                <max>0.9</max>
                <min>0.7</min>
		<factor>0.0015</factor>
        </animation>-->

        <!--NOSHADOW=====================-->

        <animation>
		<condition>
			<greater-than>
				<property>rotors/main/rpm</property>
				<value>150</value>
			</greater-than>
		</condition>
		<type>noshadow</type>
                <object-name>Rotor-Pale</object-name>
 	</animation>

        <animation>
		<condition>
			<greater-than>
				<property>rotors/main/rpm</property>
				<value>160</value>
			</greater-than>
		</condition>
		<type>noshadow</type>
                <object-name>Rotor-PaleD</object-name>
 	</animation>

        <animation>
		<type>noshadow</type>
                <object-name>Rotor-Disc_M-Pale</object-name>
 	</animation>

        <!--SELECT========================-->

        <animation>
		<condition>
			<less-than>
				<property>rotors/main/rpm</property>
				<value>150</value>
			</less-than>
		</condition>
		<type>select</type>
                <object-name>Rotor-Pale</object-name>
 	</animation>

        <animation>
		<condition>
                        <and>
                            <less-than>
				<property>rotors/main/rpm</property>
				<value>210</value>
			 </less-than>
                         <greater-than>
                                <property>rotors/main/rpm</property>
				<value>149</value>
                         </greater-than>
                     </and>
		</condition>
		<type>select</type>
                <object-name>Rotor-PaleD</object-name>
 	</animation>

        <animation>
		<condition>
			<greater-than>
				<property>rotors/main/rpm</property>
				<value>200</value>
			</greater-than>
		</condition>
		<type>select</type>
                <object-name>Rotor-Disc_M-Pale</object-name>
 	</animation>













</PropertyList>